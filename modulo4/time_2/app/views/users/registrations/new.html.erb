<div>

  <div class="login_wrapper">
      <div class="animate form login_form">
         <section class="login_content">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                <h1 class="text-primary">Cadastrar-se</h1>

                <div>
                  <%= f.email_field :email, autofocus: true, placeholder:"E-mail", class:"form-control" %>
                </div>

                <div>
                  <%= f.password_field :password, placeholder: "Senha", class:"form-control" %>
                </div>

                <div>
                  <%= f.password_field :password_confirmation, placeholder: "ConfirmaÃ§Ã£o da senha", class:"form-control" %>
                </div>

                <div>
                  <%= f.submit "Cadastrar-se", class:"btn btn-primary submit", style:"float: none; margin-left: 0px; width: 100%" %>
                </div>

                <div class="clearfix"></div>
                
                <div class="separator">
          
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>  
