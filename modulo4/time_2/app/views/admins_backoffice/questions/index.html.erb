<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
     </div>
</div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="text-center">ID</th>
          <th class="text-center"><%= translate_attribute(@questions, :description) %></th>
          <th class="text-center"><%= translate_attribute(@questions, :subject) %></th>
          <th class="text-center">
            <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
            <i class="fa fa-plus"></i>
          <% end %>
          </th>
        </tr>
      </thead>
 <tbody>
    <% @questions.each do |question| %>
    <tr>
      <td class="text-center"><%= question.id %></td>
      <td><%= question.description.truncate(90) %></td>
      <td class="text-center"><%= question.subject.description %></td>
      <td style="width: 100px">
        <div class="text-center">
          <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %>
             <i class="fa fa-edit"></i>
          <% end %>
          
        <%= link_to admins_backoffice_question_path(question), method: :delete, 
            class:"btn btn-danger btn-circle", 
            data: {confirm: t("messages.confirm_with", 
            item: question.description.truncate(26))} do %>

             <i class="fa fa-minus"></i>
          <% end %>
          </div>

      </td>
    </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
  <%= paginate @questions %>
  </div>
</div>
