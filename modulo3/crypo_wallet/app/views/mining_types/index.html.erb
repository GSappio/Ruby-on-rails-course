
    <div class="card" style="width: 50rem; left: 25%; top: 5em;" >
      <p id="notice"><%= notice %></p>

      <h1><%= t('msg_mining_types') %></h1>
        <table class="table">
          <thead>
            <tr>
              <th><%= @mining_types.human_attribute_name(:description) %></th>
              <th><%= @mining_types.human_attribute_name(:acronym) %></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <tbody>
            <% @mining_types.each do |mining_type| %>
              <tr>
                <td><%= mining_type.description %></td>
                <td><%= mining_type.acronym %></td>
                <td><%= link_to t('links.show'), mining_type, class:"btn btn-primary btn-sm" %></td>
                <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class:"btn btn-primary btn-sm" %></td>
                <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('msg_apagar') }, class:"btn btn-primary btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
         <br>

    <%= link_to t('new_type'), new_mining_type_path, class:"btn btn-primary" %>
    <br/>
    <%= link_to 'Back', welcome_index_path, class:"btn btn-primary" %>


    </div>


