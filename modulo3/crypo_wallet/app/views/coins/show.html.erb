<div class="card" style="width: 50rem; left: 25%; top: 5em;" >

<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @coin.description %>
</p>

<p>
  <strong>Acronym:</strong>
  <%= @coin.acronym %>
</p>

<p>
  <strong>Url image:</strong>
  <%= image_tag @coin.url_image, size: "25x25" %>
</p>

<%= link_to 'Edit', edit_coin_path(@coin), class:"btn btn-primary"  %>
<br/>
<%= link_to 'Back', coins_path, class:"btn btn-primary" %>

</div>
