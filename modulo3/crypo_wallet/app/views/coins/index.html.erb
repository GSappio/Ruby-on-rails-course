<div class="card" style="width: 50rem; left: 25%; top: 5em;" >
<p id="notice"><%= notice %></p>

<h1>Coins</h1>
<table class="table">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th> 
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= link_to t('links.show'), coin, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-primary btn-sm"%></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('link_novo'), new_coin_path, class:"btn btn-primary" %>
</div>
